<Window x:Class="Zebra.PrintStation.Util.PrinterActionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#B6B9BC"
        Height="100" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="225"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Name="animatedArrow_Image" Source="/Resources/ic_action_retrieve_formats.png" HorizontalAlignment="Center"/>
        <Label Grid.Column="1" Name="action_Label" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
