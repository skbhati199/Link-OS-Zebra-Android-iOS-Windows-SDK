<Window x:Class="Zebra.PrintStation.Util.BluetoothHelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zebra.PrintStation.Util"
        mc:Ignorable="d"
        Title="Bluetooth Pairing Help" Height="300" Width="950">
    <Grid Margin="10,0,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="18" FontWeight="Bold" Text="Supported Windows Versions:"/>
        <TextBlock Grid.Row="2" TextWrapping="WrapWithOverflow" Name="SupportedWindowsVersionsTextBlock"/>
        <TextBlock Grid.Row="4" FontSize="18" FontWeight="Bold" Text="Pairing with Zebra Printers:"/>
        <TextBlock Grid.Row="6" TextWrapping="WrapWithOverflow" Name="BluetoothHelpTextBlock"/>
    </Grid>
</Window>
