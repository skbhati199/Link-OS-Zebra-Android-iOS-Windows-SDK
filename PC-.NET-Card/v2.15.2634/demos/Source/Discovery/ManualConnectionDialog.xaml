<Window x:Class="DeveloperDemo_Card_Desktop.Discovery.ManualConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeveloperDemo_Card_Desktop.Discovery"
        mc:Ignorable="d"
        Title="Manual Connect"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="15" Orientation="Vertical">
        <TextBlock FontWeight="Bold">IP Address</TextBlock>
        <TextBox x:Name="IpAddressInput" Width="200" Margin="0 5 0 0" />
        <StackPanel Margin="0 15 0 0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Click="CancelButton_Click">Cancel</Button>
            <Button Margin="10 0 0 0" Click="ConnectButton_Click">Connect</Button>
        </StackPanel>
    </StackPanel>
</Window>
