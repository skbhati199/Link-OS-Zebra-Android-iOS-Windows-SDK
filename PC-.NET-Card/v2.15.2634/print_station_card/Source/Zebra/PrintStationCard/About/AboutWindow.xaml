<Window x:Class="Zebra.PrintStationCard.Util.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zebra.PrintStationCard.Util" 
        mc:Ignorable="d" 
        WindowStartupLocation="CenterOwner"
        Title="About Print Station"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="30">
        <StackPanel Width="150" Margin="0 0 0 15">
            <Image Source="/Resources/Zebra_Logo_K.png"></Image>
        </StackPanel>
        <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Center">Print Station Card</TextBlock>
        <TextBlock x:Name="VersionNumber" FontSize="14" FontStyle="Italic" HorizontalAlignment="Center" Margin="0 0 0 15" />
        <TextBlock HorizontalAlignment="Center">© 2018 Zebra Technologies Corporation</TextBlock>
    </StackPanel>
</Window>
